{
    "routes": [
        {
            "name": "createUser",
            "handler": "src/interfaces/http/user/create.handler",
            "event": {
                "type": "http",
                "path": "/users",
                "method": "POST"
            },
            "docs": {
                "summary": "Criar usuário",
                "description": "Cria um novo usuário no sistema",
                "requestSchema": "CreateUserRequest",
                "responses": {
                    "201": { "description": "Usuário criado", "schema": "UserResponse" },
                    "400": { "description": "Dados inválidos", "schema": "ErrorResponse" },
                    "409": { "description": "Email já existe", "schema": "ErrorResponse" }
                }
            }
        },
        {
            "name": "listUsers",
            "handler": "src/interfaces/http/user/list.handler",
            "event": {
                "type": "http",
                "path": "/users",
                "method": "GET"
            },
            "docs": {
                "summary": "Listar usuários",
                "description": "Retorna todos os usuários",
                "responses": {
                    "200": { "description": "Lista de usuários", "schema": "[UserResponse]" }
                }
            }
        },
        {
            "name": "getUser",
            "handler": "src/interfaces/http/user/get.handler",
            "event": {
                "type": "http",
                "path": "/users/{id}",
                "method": "GET"
            },
            "docs": {
                "summary": "Buscar usuário",
                "description": "Retorna um usuário pelo ID",
                "responses": {
                    "200": { "description": "Dados do usuário", "schema": "UserResponse" },
                    "404": { "description": "Não encontrado", "schema": "ErrorResponse" }
                }
            }
        },
        {
            "name": "updateUser",
            "handler": "src/interfaces/http/user/update.handler",
            "event": {
                "type": "http",
                "path": "/users/{id}",
                "method": "PUT"
            },
            "docs": {
                "summary": "Atualizar usuário",
                "description": "Atualiza os dados de um usuário",
                "requestSchema": "UpdateUserRequest",
                "responses": {
                    "200": { "description": "Usuário atualizado", "schema": "UserResponse" },
                    "400": { "description": "Dados inválidos", "schema": "ErrorResponse" },
                    "404": { "description": "Não encontrado", "schema": "ErrorResponse" },
                    "409": { "description": "Email já existe", "schema": "ErrorResponse" }
                }
            }
        },
        {
            "name": "deleteUser",
            "handler": "src/interfaces/http/user/delete.handler",
            "event": {
                "type": "http",
                "path": "/users/{id}",
                "method": "DELETE"
            },
            "docs": {
                "summary": "Deletar usuário",
                "description": "Remove um usuário do sistema",
                "responses": {
                    "204": { "description": "Usuário deletado" },
                    "404": { "description": "Não encontrado", "schema": "ErrorResponse" }
                }
            }
        }
    ]
}
